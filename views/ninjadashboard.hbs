<div class="container-fluid mt-3 " >
    <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab"
                    aria-controls="v-pills-home" style="background-color: #00a7b5; color: white" aria-selected="true">Dashboard</a>
                <a class="nav-link" id="v-pills-profile-tab" style="background-color: #00a7b5; color: white" href="/ninjadashboard/orders" role="button"
                    aria-controls="v-pills-profile" aria-selected="false">Orders</a>
                <a class="nav-link" id="v-pills-messages-tab" style="background-color: #00a7b5; color: white" data-toggle="pill" href="#v-pills-messages" role="tab"
                    aria-controls="v-pills-messages" aria-selected="false">Update Profile</a>
                <a class="nav-link" id="v-pills-settings-tab" href="/ninjadashboard/logout" role="button"
                    aria-controls="v-pills-settings" style="background-color: #00a7b5; color: white" aria-selected="false">Logout</a>
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                    aria-labelledby="v-pills-home-tab">
                    <div class="container ">
                        {{#each data}}
                        <span>
                            <img src={{this.photo}}
                                alt="Ninja Picture" height="150px">

                            <span id="ninja _name" style="font-size: 20px; color:#004f59"><strong>Welcome {{this.first_name}} {{this.last_name}} </strong></span>
                        </span>
                    </div><br>
                    <div class="container" >
                        <div class="row">
                            
                            <div class="col-sm-6">
                                <div class="card">
                                    <div class="card-header"style="font-size: 20px; color:#004f59">Personal Details</div>
                                    <div class="card-body">
                                        <div id="personal_details">
                                            <div>
                                                <label for="name" class="font-weight-bold"style="color:#004f59">Name:</label>
                                                <input type="text" id="name" class="form-control" value={{this.first_name}}></input>
                                            </div>
                                            <div>
                                                <label for="id" class="font-weight-bold"style=" color:#004f59">Emp Id:</label>
                                                <input type="text" id="id" class="form-control" value={{this._id}}></input>
                                            </div>
                                            <div>
                                                <label for="locality" class="font-weight-bold"style=" color:#004f59">Locality:</label>
                                                <input type="text" id="locality" class="form-control" value={{this.locality}}></input>
                                            </div>
                                            <div id="phone">
                                                <label for="phone" class="font-weight-bold"style="color:#004f59"> Contact No: </label>
                                                <input type="number" id="phone" class="form-control" value={{this.phonenumber}}></input>
                                            </div>
                                            <div id="email">
                                                <label for="email" class="font-weight-bold"style=" color:#004f59">Registered Email:</label>
                                                <input type="email" id="email" class="form-control" value={{this.email}}></input>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card">
                                    <h5 class="card-header"style="font-size: 20px; color:#004f59">Availability Status</h5>
                                    <div class="card-body">

                                        <p id="availability" style="font-size: 20px; color:#004f59">{{this.Availability}}</p>

                                    </div>
                                </div>
                                <br>
                                <div class="card">
                                    <h5 class="card-header" style="font-size: 20px; color:#004f59">Duty Status</h5>
                                    <div class="card-body">

                                        <p id="duty" style="font-size: 20px; color:#004f59">{{this.duty}}</p>

                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <br>
                        <div class="container" style="text-align: center">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="card">
                                        <h5 class="card-header" style="font-size: 20px; color:#004f59">Duty</h5>
                                        <div class="card-body">

                                            <a href="#" id="Onduty" class="btn btn bg-info" style="color: white"> Start Duty</a>
                                            <a href="#" id="Offduty" class="btn btn bg-info" style="color: white"> Stop Duty</a>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="card">
                                        <h5 class="card-header" style="font-size: 20px; color:#004f59">Change the Status</h5>
                                        <div class="card-body">

                                            <a href="#" id="available" class="btn btn bg-info" style="color: white">Available </a>
                                            <a href="#" id="not_available" class="btn btn bg-info" style="color: white">Not Available</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <br>
                        <br>
                    </div>
                </div>
                <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                    <div class="container"><br>
		        
		<div class="col-lg-6 m-auto d-block">
			<div class="container">
                        <span>
                            <span id="ninja _name" style="font-size: 20px; color:#004f59; text-align:center"> <strong>Welcome {{this.first_name}} {{this.last_name}} </strong> </span>
                        </span>
                    </div><br>
                     
			<form action="/ninjadashboard/update/{{this._id}}" onsubmit="return validation()" enctype="multipart/form-data" class="bg-light" method="POST">
				<div class="form-group">
					<label for="user" class="font-weight-bold"> Locality</label>
					<input type="text" name="locality" class="form-control" id="locality" autocomplete="off">
					<span id="local" class="text-danger font-weight-bold"> </span>
				</div>

				<div class="form-group">
					<label for="user" class="font-weight-bold"> City</label>
					<input type="text" name="city" class="form-control" id="city" autocomplete="off">
					<span id="town" class="text-danger font-weight-bold"> </span>
				</div>
				<div class="form-group">
					<label class="font-weight-bold"> Password: </label>
					<input type="password" name="pass" class="form-control" id="pass" autocomplete="off">
					<span id="passwords" class="text-danger font-weight-bold"> </span>
				</div>

				<div class="form-group">
					<label class="font-weight-bold"> Confirm Password: </label>
					<input type="password" name="conpass" class="form-control" id="conpass" autocomplete="off">
					<span id="confrmpass" class="text-danger font-weight-bold"> </span>
				</div>

				<div class="form-group">
					<label class="font-weight-bold"> Mobile Number: </label>
					<input type="text" name="mobile" class="form-control" id="mobileNumber" autocomplete="off">
					<span id="mobileno" class="text-danger font-weight-bold"> </span>
				</div>
				<div class="form-group row">
                <label for="photo" class="col-sm-2 col-form-label font-weight-bold">Photo</label>
                <div class="col-sm-10">
                <input type="file" class="form-control-file" id="photo" name="photo">
                <p class="small mb-0" style="color: #004f59">upload your profile pic</p>
                <p class="small" style="color: #004f59">Preferable size: 1880 x 1058 pixels</p>
            </div>
             </div>

				<input type="submit" name="submit" value="Update" class="btn  bg-info mb-3" style="color:white"autocomplete="off">


			</form><br><br>

{{/each}}
		</div>
	</div>
</div>
</div>
</div>
</div>
</div>
